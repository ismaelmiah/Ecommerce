@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Role</h1>

<form asp-action="Delete" id="role-form" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">

            <h3>Do you want to delete?</h3>
            <div class="form-group row">
                <div class="col-4">
                    <label>Role Name</label>
                </div>  
                <div class="col-8">
                    <input name="id" type="hidden" value="@ViewBag.id" />
                    <input readonly="readonly" name="name" id="name" value="@ViewBag.name" required="required" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}