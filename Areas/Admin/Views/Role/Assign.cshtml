@model Online_Shop.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = "Assign";
}

<h1>Assign Role</h1>

<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">

            <h3>@ViewBag.msg</h3>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="userId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="userId" asp-items="ViewBag.UserId" class="form-control"></select>
                    @*<input name="name" id="name" value="@ViewBag.name" required="required" class="form-control" />*@
                </div>
                <span asp-validation-for="userId"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="roleId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="roleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                </div>
                <span asp-validation-for="roleId"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Assign</button>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
