@model Online_Shop.Models.Products
@{
    ViewData["Title"] = "Create";
}

<h1>@(Model.Id == 0 ? "Create" : "Edit") Product</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Image" class="form-control" id="customFile"
                           type="file" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" 
                            class="form-control"></select>
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId"
                            class="form-control"></select>
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="isAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="isAvailable" type="checkbox" />
                </div>
                <span asp-validation-for="isAvailable" class="text-danger"></span>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            @if (Model.Id != 0)
            {
                <img src="~/images/@Model.Image" alt="Alternate Text" 
                     style="width:100%; border-radius: 5px; border: 2px solid #808080" />
            }
        </div>

        <div class="form-group">
            <button class="btn btn-primary"> @(Model.Id != 0 ? "Update" : "Save")</button>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
        <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
        </script>
}