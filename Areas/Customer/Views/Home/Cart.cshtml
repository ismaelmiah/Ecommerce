@using Online_Shop
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.Image" alt="@item.Name" width="200px" height="150px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-area="Customer" asp-action="removetocart" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-info">Back To Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Price: </h3>
        <h3>Grant Total: @Model.Sum(x=>x.Price)</h3>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Orders" class="btn btn-success">Process To Checkout</a>
    </div>
</div>